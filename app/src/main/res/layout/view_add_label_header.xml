<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/backdrop"
        android:text="标签名字"
        android:paddingLeft="10dp"
        android:textSize="@dimen/tv_sview_title"
        android:textColor="@color/text"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/et_set_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_common"
        android:hint="未设置标签名字"
        android:paddingLeft="10dp"
        android:textColor="@color/text"
        android:textSize="@dimen/tv_sview_title_detail" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/backdrop"
        android:text="标签成员(0)"
        android:paddingLeft="10dp"
        android:textSize="@dimen/tv_sview_title"
        android:textColor="@color/text"
        android:gravity="center_vertical"
        android:id="@+id/tv_conntent_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smiall_add"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            />

    <TextView
        android:id="@+id/tv_add_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="添加成员"
        android:textSize="@dimen/tv_sview_title_detail"
        android:textColor="@color/green"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
