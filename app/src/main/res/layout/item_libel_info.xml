<?xml version="1.0" encoding="utf-8"?>
<com.qingmiao.qmdoctor.widget.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipe_content"
    android:background="@drawable/selector_color_list_bg"
    android:clickable="true">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/ll_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="2dp"
            android:text="患者姓名"
            android:textColor="@color/black_1"
            android:textSize="@dimen/tv_sitem_title" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dp"
            android:text="患者备注信息"
            android:visibility="gone"
            android:textColor="@color/text"
            android:textSize="@dimen/tv_sview_title" />
    </LinearLayout>

</LinearLayout>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:textSize="@dimen/tv_sitem_title"
        android:textColor="@android:color/white" />
</com.qingmiao.qmdoctor.widget.SwipeMenuView>