<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg"
    android:orientation="vertical">

    <com.qingmiao.qmdoctor.widget.ViewPagerIndicator
        android:id="@+id/dataIcon_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/alpha"
        android:orientation="horizontal"
        android:scrollbars="none" />

    <android.support.v4.view.ViewPager
        android:id="@+id/dataIcon_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dataIcon_title"></android.support.v4.view.ViewPager>
</LinearLayout>
