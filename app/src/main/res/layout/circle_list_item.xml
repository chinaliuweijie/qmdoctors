<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/rl_item"
    android:background="@drawable/shape_bnt_circle"
    android:padding="16dp">

    <TextView
        android:id="@+id/circle_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继发性肾小球肾炎"
        android:textColor="@color/black_1"
        android:singleLine="true"
        android:textSize="@dimen/tv_sitem_title" />


    <com.qingmiao.qmdoctor.widget.IconFontTextview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/icons_back_right"
        android:textColor="@color/text"
        android:textSize="13dp" />
</RelativeLayout>
</RelativeLayout>