<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:id="@+id/rl_content"
    android:background="@drawable/selector_color_list_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:id="@+id/home_list_item_iv"
        android:layout_width="100dp"
        android:layout_height="78dp"
        />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/home_list_item_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="肾病人群发病率高达10.8%"
            android:textColor="#333333"
            android:textSize="@dimen/tv_sview_title_detail"  />

        <TextView
            android:id="@+id/home_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="阿斯兰和京东王企鹅无群二群无卡时间都会实打实大所多撒多所多撒多撒大所多来上的历史地理哈市维A酸多撒多撒"
            android:textColor="@color/text"
            android:textSize="@dimen/tv_sview_data"  />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/home_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3分钟前"
                android:textColor="@color/text"
                android:textSize="@dimen/tv_sview_data"  />

            <TextView
                android:id="@+id/home_list_item_rightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="210跟帖"
                android:textColor="@color/text"
                android:visibility="invisible"
                android:textSize="@dimen/tv_sview_data" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/home_list_item_rightTv"
                android:visibility="invisible"
                android:src="@drawable/icon_eye" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
