<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_color_list_bg"
    android:orientation="vertical">

 <!--   <ImageView
        android:id="@+id/circleDetail_icon_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/shape_bg_green" />-->

    <ImageView
        style="@style/style_iv_share_circle"
        android:id="@+id/circleDetail_icon_iv"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/btn_design_circle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@id/circleDetail_icon_iv"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/circleDetail_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是用户名"
            android:textColor="@color/black_1"
            android:textSize="@dimen/tv_sview_title_detail"  />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circleDetail_name_tv"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/circleDetail_icon_iv"
            android:text="3小时前"
            android:textColor="@color/text"
            android:textSize="@dimen/tv_sview_data" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="21dp"
            android:text="收到了哈死了等会聊哈受到利好拉斯等会拉上的里"
            android:textSize="@dimen/tv_sview_title_detail"/>

    </LinearLayout>


</RelativeLayout>